@model Team
@{
    ViewBag.Title = "Редактирование команды";
}
<form asp-action="Edit" asp-controller="Team" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название команды:</label>
        <input type="text" asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="DutyDuration" class="control-label">Длительность дежурства(в днях):</label>
        @Html.DropDownList("DutyDuration", new SelectList(new int[] { 1, 2, 3, 4, 5 }, @Model.DutyDuration), new { @class = "select-control" })
    </div>
    <input type="hidden" asp-for="FirstPersonInDutyId" class="form-control" readonly />
    <input type="hidden" asp-for="DutyStartDate" class="form-start-date" readonly />
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
