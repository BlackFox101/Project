@model Project.Models.Person
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <form asp-action="edit" asp-controller="Person" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label">Возраст</label>
            <input type="text" asp-for="Position" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
