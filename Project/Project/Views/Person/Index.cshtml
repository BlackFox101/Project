@model IEnumerable<Project.Models.Person>
@{
    ViewBag.Title = "Все пользователи";
}
<a asp-action="Create">Добавить пользователя</a>
<table class="table">

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Position</td>
        <td>@item.Team.Title</td>
        <td>
            <a asp-action="Details" asp-controller="Person" asp-route-id="@item.Id">Подробнее</a> |
            <a asp-action="Edit" asp-controller="Person" asp-route-id="@item.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Person" asp-route-id="@item.Id">Удалить</a>
        </td>
    </tr>
    }
</table>
