@model Vacation
@{
    ViewBag.Title = "Добавить отпуск";

}
<h2 class="person-link">Добавить отпуск</h2>
<h2><a asp-action="Details" asp-controller="Person" asp-route-id="@ViewBag.Person.Id">@ViewBag.Person.Name</a></h2>
<form asp-action="AddVacation" asp-controller="Person">
    <input type="hidden" asp-for="Id" value="" />
    <input type="hidden" asp-for="PersonId" value="@ViewBag.PersonId" />
    <table class="vacations_table">
        <thead>
            <tr class="title_tr">
                <td class="pad_td"><label asp-for="Reason">Причина:</label></td>
                <td class="pad_td"><label asp-for="StartDate">Начало:</label></td>
                <td class="pad_td"><label asp-for="EndDate">Конец:</label></td>
            </tr>
        </thead>
        <tbody id="team_det">
            <tr class="title_tr">
                <td><input type="text" asp-for="Reason" class="form-reason" required /></td>
                <td><input type="date" asp-for="StartDate"  class="form-date" required /></td>
                <td><input type="date" asp-for="EndDate"  class="form-date" required /></td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn" />
    </div>
</form>
