@model Project.Models.Person
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Name</dd>

        <dt>Должность</dt>
        <dd>@Model.Position</dd>

        <dt>Команда</dt>
        <dd>@Model.Team.Title</dd>

    </dl>
</div>
