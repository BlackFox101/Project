@model Vacation
@{
    ViewBag.Title = "Редактировать отпуск";

}
<h2 class="person-link">Редактировать отпуск</h2>
<h2><a asp-action="Details" asp-controller="Person" asp-route-id="@Model.Person.Id">@Model.Person.Name</a></h2>
<form asp-action="EditVacation" asp-controller="Person">
    <table class="vacations_table">
        <thead>
            <tr class="title_tr">
                <td class="pad_td"><label asp-for="Reason">Причина:</label></td>
                <td class="pad_td"><label asp-for="StartDate">Начало:</label></td>
                <td class="pad_td"><label asp-for="EndDate">Конец:</label></td>
            </tr>
        </thead>
        <tbody id="team_det">
            <tr class="title_tr">
                <td><input type="text" asp-for="Reason" class="form-reason" required /></td>
                <td><input type="date" asp-for="StartDate" class="form-date" required /></td>
                <td><input type="date" asp-for="EndDate" class="form-date" required /></td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" asp-for="PersonId" value="@Model.PersonId" />
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-light" />
    </div>
</form>
